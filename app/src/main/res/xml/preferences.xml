<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_general">
        <CheckBoxPreference
            android:title="@string/pref_load_last_file"
            android:defaultValue="true"
            android:key="load_last_file" />
        <CheckBoxPreference
            android:title="@string/pref_quit_confirm"
            android:defaultValue="true"
            android:key="quit_confirm" />
        <CheckBoxPreference
            android:title="@string/pref_hidden_files"
            android:summary="@string/pref_hidden_files_desc"
            android:key="show_hidden_files"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_editor">
        <EditTextPreference
            android:title="@string/pref_font_size"
            android:summary="@string/pref_font_size_desc"
            android:icon="@drawable/ic_pref_font_size"
            android:key="font_size"
            android:defaultValue="15"
            android:dialogTitle="@string/pref_font_size"
            android:inputType="number" />
        <CheckBoxPreference
            android:title="@string/pref_line_numbers"
            android:summary="@string/pref_line_numbers_desc"
            android:icon="@drawable/ic_pref_line_numbers"
            android:defaultValue="true"
            android:enabled="false" />
        <CheckBoxPreference
            android:title="@string/pref_symbols_bar"
            android:summary="@string/pref_symbols_bar_desc"
            android:icon="@drawable/ic_symbols"
            android:defaultValue="true"
            android:key="show_symbols_bar" />
    </PreferenceCategory>
</PreferenceScreen>
