<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/symbolScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:fillViewport="true"
    android:visibility="gone"
    tools:showIn="@layout/content_main">

    <LinearLayout
        android:id="@+id/layout_symbols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        tools:ignore="HardcodedText">

        <TextView
            style="@style/SymbolView"
            android:text="{" />

        <TextView
            style="@style/SymbolView"
            android:text="}" />

        <TextView
            style="@style/SymbolView"
            android:text="(" />

        <TextView
            style="@style/SymbolView"
            android:text=")" />

        <TextView
            style="@style/SymbolView"
            android:text=";" />

        <TextView
            style="@style/SymbolView"
            android:text="," />

        <TextView
            style="@style/SymbolView"
            android:text="=" />

        <TextView
            style="@style/SymbolView"
            android:text="&quot;" />

        <TextView
            style="@style/SymbolView"
            android:text="|" />

        <TextView
            style="@style/SymbolView"
            android:text="&amp;" />

        <TextView
            style="@style/SymbolView"
            android:text="!" />

        <TextView
            style="@style/SymbolView"
            android:text="[" />

        <TextView
            style="@style/SymbolView"
            android:text="]" />

        <TextView
            style="@style/SymbolView"
            android:text="+" />

        <TextView
            style="@style/SymbolView"
            android:text="-" />

        <TextView
            style="@style/SymbolView"
            android:text="*" />

        <TextView
            style="@style/SymbolView"
            android:text="/" />

        <TextView
            style="@style/SymbolView"
            android:text="&lt;" />

        <TextView
            style="@style/SymbolView"
            android:text="&gt;" />
    </LinearLayout>
</HorizontalScrollView>